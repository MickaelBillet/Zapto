  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/var/db/connectwebserver/connect.db3;",
    "ServerType": "Sqlite"
  },
  "LogDirectoryPath": "/var/log/connectwebserver",
  "Version": "0.0.0",
