{
  "Serilog": {
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/connectwebserver/Logs-Connect-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30,
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "MailSettings": {
    "Host": "smtp.ionos.fr",
    "Port": 465,
    "SecureSocketOptions": "Auto"
  },
  "Keycloak": {
    "realm": "Zapto",
    "auth-server-url": "https://connect-zapto.fr/auth/realms/zapto",
    "audience": "ZaptoOIDC"
  },
  "SensorPeriod": "120000", //2min - Period for reading sensor data
  "ValidityPeriod": "30", //30min  - Validity period of sensor responses
  "ProcessingDataPeriod": "120000", //2 minutes - Period for processing sensor data
  "ConnectionPeriod": "120000", //2 minutes - Period for sending sensor configuration data 
  "LogDirectoryPath": "/var/log/connectwebserver",
  "Version": "1.1.0",
  "UrlSignalR": "http://connect-zapto.fr/SignalR",
  "Margin": "0.2",
  "CorsOrigins": "https://dashboard.connect-zapto.fr",
  "Cache": "0",
  "Client_ID": "323b2523-adb4-45bd-aebe-369a6dbb10d9",
  "Tenant_ID": "13f1f8ab-958d-4ad1-a584-6c03f893b9ba",
  "KeyVault_ID": "s7b8Q~3Rdaym_5w518MjYQGW88ZCtwhtrmoUdbXY",
  "AppRegistration": "connectwebserver",
  "Secret": "VarEnv", //1: VarEnv 2 : KeyVault
  "CommunicationType": "Serial" //1 : WebSocket 2 : Serial
}
