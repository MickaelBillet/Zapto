{
  "Serilog": {
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/connectwebserver/Logs-Connect-.txt",
          //"path": "/home/pi/Desktop/logs/Logs-Connect-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30,
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "MailSettings": {
    "Mail": "mickaconnect.zapto@gmail.com",
    "Login": "mickaconnect.zapto@gmail.com",
    "Password": "beauTemps?08",
    "Host": "smtp.gmail.com",
    "Port": 465,
    "SecureSocketOptions": "Auto"
  },
  "Keycloak": {
    "realm": "Zapto",
    "auth-server-url": "https://connect-zapto.fr/auth/realms/zapto",
    "audience": "ZaptoOIDC"
  },
  "SensorPeriod": "120000", //2min
  "ValidityPeriod": "60", //60min 
