@inject IStringLocalizer<Resource> Localizer
@inject IChooseLanguageViewModel ViewModel
 
@if (this.ViewModel.Cultures != null)
{
    <div style="width:120px">
        <MudSelect Class="my-5" @bind-Value="@this.ViewModel.SelectedCulture" Margin="Margin.Dense" AnchorOrigin="Origin.BottomCenter" Dense="true" Variant="Variant.Outlined">
            @foreach (var culture in this.ViewModel.Cultures)
            {
                <MudSelectItem Value="@culture"></MudSelectItem>
            }
        </MudSelect>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await this.ViewModel.InitializeAsync(null);
    }
}
