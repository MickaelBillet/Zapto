@if (IsLoading)
{
    if (LoadingTemplate != null)
    {
        @LoadingTemplate
    }
    else
    {
        <div id="app" class="bg-light">
            <div style="position:absolute; top:30vh; width:80%; text-align:center">
                <h6 style="color:#1E88E5; font-size:xx-large; font-weight:400">Zapto</h6>
                <div style="display:flex; gap:10px; justify-content:center; align-items:center">
                    <div class="spinner-grow mt-4" style="color:#1E88E5" role="status"/>                   
                    <div class="spinner-grow mt-4" style="color:#1E88E5" role="status"/>                  
                    <div class="spinner-grow mt-4" style="color:#1E88E5" role="status"/>                   
                    <div class="spinner-grow mt-4" style="color:#1E88E5" role="status"/>                    
                </div>
            </div>
        </div>
    }
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public RenderFragment? LoadingTemplate { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}