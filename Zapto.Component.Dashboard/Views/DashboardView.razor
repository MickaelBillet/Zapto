@inject IDashboardViewModel ViewModel
@inject IStringLocalizer<Resource> Localizer
@implements IDisposable

<Location @bind-Model="@this.Location" @bind-IsLoading="@this.IsLoading"></Location>
<Loading IsLoading="@(this.IsLoading == true)">
    <Weather></Weather>
    <Pollution></Pollution>
    <RoomList Location="@this.Location"></RoomList>
</Loading>

@code 
{
    public LocationModel? Location { get; set; }

    public bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        if (this.ViewModel != null)
        {
            await this.ViewModel.InitializeAsync(null);
        }
    }

    public void Dispose()
    {
        if (this.ViewModel != null)
        {
            this.ViewModel?.Dispose();
            this.ViewModel = null;
        }
    }
}